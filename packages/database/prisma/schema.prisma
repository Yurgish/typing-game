enum LearningMode {
  KEY_INTRODUCTION
  LETTER_SEQUENCE
  DEFAULT
}

enum LessonDifficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model Lesson {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  difficulty LessonDifficulty
  order      Int
  screens    Screen[]
}

